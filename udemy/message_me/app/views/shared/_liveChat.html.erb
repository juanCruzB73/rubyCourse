<div class="card mb-3">
  <div class="card-body">

    <div class="d-flex flex-column justify-content-between mb-2">
      <% @messages.each do |message| %>
        <div class="mb-2">
          <div class="d-flex justify-content-between">
            <h6 class="card-subtitle text-muted mb-0">
              <small class="text-muted"><%= message.time_ago_in_words_custom %></small>
              <span><%= message.user.username %></span>
            </h6>
            <div class="d-flex flex-row">
              <% if current_user == message.user %>
                <%= button_to 'Edit', edit_message_path(message), class: "btn btn-sm btn-outline-primary me-1" %>
                <%= button_to 'Delete', message_path(message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
              <% end %>
            </div>
          </div>
          
          <p class="card-text"><%= message.body %></p>

        </div>
      <% end %>
    </div>

    <%= form_with(model: @message, url: @message.persisted? ? message_path(@message) : messages_path, method: @message.persisted? ? :patch : :post, html: { class: "mt-3" }) do |form| %>
      <div class="input-group">
        <%= form.text_area :body, class: "form-control", placeholder: "Write a comment..." %>
        <button class="btn btn-primary" type="submit"><%= @message.persisted? ? "Update" : "Comment" %></button>
      </div>
    <% end %>


  </div>
</div>
