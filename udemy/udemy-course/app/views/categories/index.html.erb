<h1>categories details</h1>
<%= will_paginate @categories %>
<div>
    <% @categories.each do |category| %>
        <strong><%= category.name %></strong>
        <%= link_to ' Show', category_path(category),method: :get %>
        <% if is_admin? %>
            <%= link_to 'Edit', edit_category_path(category),method: :get %>
            <%= link_to 'Delete', category_path(category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this category?' } %>
        <% end %>

    <% end %>
</div>
<%= link_to 'Create new category', new_category_path %>