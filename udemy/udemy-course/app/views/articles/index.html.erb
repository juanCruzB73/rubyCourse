<h1>Article details</h1>
<%= will_paginate @articles %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>By: <%=  link_to article.user.username, user_path(article.user) if article.user%></td>
            <td>
                <%= link_to 'Show', article_path(article),method: :get %>
                <%= link_to 'Edit', edit_article_path(article),method: :get %>
                <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<p><%= link_to 'Create new article', new_article_path %></p>
