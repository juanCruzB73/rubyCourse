<h1>Article details</h1>
<p><%= link_to 'Go Back', articles_path, method: :get  %></p>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>
<p><%= button_to 'Edit', edit_article_path(@article), method: :get  %></p>
<p><%= button_to 'Delete', article_path(@article), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this article?' }   %></p>