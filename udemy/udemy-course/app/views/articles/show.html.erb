<h1>Article details</h1>
<p><%= link_to 'Go Back', articles_path, method: :get  %></p>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>
<% if @article.categories.any? %>
    <% @article.categories.each do |category|%>
        <%= link_to category.name, category_path(category),method: :get %></p>
    <% end  %>
<% end %>

<% if  logged_in? && (@article.user==current_user || is_admin?) %>
    <%= link_to 'Edit', edit_article_path(@article),method: :get %>
    <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } %>
<% end %>