<% if object && object.errors.any? %>
  <div class="alert alert-danger">
    <h2>The following errors prevented the <%= object.model_name.human.downcase %> from being saved:</h2>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
